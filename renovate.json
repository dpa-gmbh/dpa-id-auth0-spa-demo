{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "pin",
  "schedule": ["before 4am on Monday"],
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    ":rebaseStalePrs",
    "group:monorepos",
    "group:allNonMajor",
    "security:minimumReleaseAgeNpm",
    "replacements:all",
    "workarounds:all"
  ],
  "npm": {
    "minimumReleaseAge": "7 days",
    "internalChecksFilter": "strict"
  }
}
